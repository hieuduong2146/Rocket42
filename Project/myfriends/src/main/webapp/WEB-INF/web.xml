<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd" version="4.0">
  <display-name>myfriends</display-name>
  <welcome-file-list>
    <welcome-file>index.html</welcome-file>
    <welcome-file>index.htm</welcome-file>
    <welcome-file>index.jsp</welcome-file>
    <welcome-file>default.html</welcome-file>
    <welcome-file>default.htm</welcome-file>
    <welcome-file>default.jsp</welcome-file>
  </welcome-file-list>
  <servlet>
  	<servlet-name>IndexPublicController</servlet-name>
  	<servlet-class>controller.IndexPublicController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>IndexPublicController</servlet-name>
  	<url-pattern>/trang-chu</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>InforPublicController</servlet-name>
  	<servlet-class>controller.InforPublicController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>InforPublicController</servlet-name>
  	<url-pattern>/thong-tin</url-pattern>
  </servlet-mapping>
  
  <servlet>
  	<servlet-name>DetailPublicController</servlet-name>
  	<servlet-class>controller.DetailPublicController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>DetailPublicController</servlet-name>
  	<url-pattern>/mo-ta</url-pattern>
  </servlet-mapping>
  
   <servlet>
  	<servlet-name>AddContactPublicController</servlet-name>
  	<servlet-class>controller.AddContactPublicController</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>AddContactPublicController</servlet-name>
  	<url-pattern>/them-thong-tin</url-pattern>
  </servlet-mapping>
  
</web-app>